@page
@model TaoLoid.Pages.loginModel
@{
}
<head>
    
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,300,0,0" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#loginbutton").click(function () { login(); });
        });

        function login() {
            var uname = $("#uname").val();
            var psw = $("#psw").val();
            $.ajax({
                url: "./actionlogin",
                method: "POST",
                headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
                data: {
                    action: "login",
                    uname: uname,
                    psw: psw,
                },
                success: function (data) {
                    alert(data);
                    if (data.trim() == "Login success") {
                       window.location.replace("./index");
                    }
                },
                error: function (xhr, ajaxOptions, thrownError) { alert(thrownError); }
            });
        }

        

     </script>
</head>

<form>
    @Html.AntiForgeryToken()
    <div class="container text-center">
        <img class="imge img-rounded" src="https://scontent.fbkk10-1.fna.fbcdn.net/v/t39.30808-6/314867024_3528485597437928_3973846838755430244_n.jpg?_nc_cat=110&ccb=1-7&_nc_sid=49d041&_nc_eui2=AeFsuHuFCpawyX8_-aoW_NbifQQQkJf_Icl9BBCQl_8hyeXm-qSr0ok2QDEzoI_6H1Jnwey7YQdKDDNd8ZQM35a9&_nc_ohc=rbTlxLH1XZgAX-P3BST&_nc_ht=scontent.fbkk10-1.fna&oh=00_AfCxcunX3Wyen42V12YMacSdWNR8lUsT07YUnoGe5ANejA&oe=650F50B3" />
        <br/>
        <h1>TAOLOID LOGIN</h1>
        <br/>
        <span class=" material-symbols-rounded">mail </span>
        <input type="text" placeholder="Enter Username" name="uname" id="uname" required>
        <br><br>
        <span class=" material-symbols-rounded">lock </span>
        <input type="password" placeholder="Enter Password" name="psw" id="psw" required>
        <br><br>
        <button class="button text-center" type="button " id="loginbutton">Login↵</button>
        
    </div>

</form>

